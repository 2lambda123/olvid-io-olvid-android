<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbarAlwaysDrawVerticalTrack="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    tools:text="@plurals/dialog_message_delete_messages" />

                <TextView
                    android:id="@+id/dialog_everywhere_explanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="8dp"
                    tools:text="@string/dialog_text_delete_everywhere_explanation"
                    android:textColor="@color/grey"
                    android:textStyle="italic" />

                <Switch
                    android:id="@+id/everywhere_switch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    app:switchPadding="16dp"
                    android:text="@string/dialog_text_delete_everywhere"
                    android:textColor="@color/grey"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>
</ScrollView>

