<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/background_popup_discussion_owned_identity">

    <View
        android:layout_width="24dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_popup_window_bubble_triangle"/>

    <LinearLayout
        android:id="@+id/popup_attach_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_popup_transparent"
        android:gravity="start">

        <TextView
            android:id="@+id/attach_configure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_attach_configure"
            android:text="@string/label_configure_shortcuts"
            android:textColor="@color/mediumGrey"
            style="@style/SubtleGreyRipple"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="32dp"
            android:paddingVertical="2dp"
            android:background="?attr/selectableItemBackground" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrey" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>