<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_info_message">
    <TextView
        android:id="@+id/message_status_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:textColor="@color/primary700"
        android:textSize="14dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="SpUsage"
        android:text="@string/label_message_status"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/message_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/message_status_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableEndCompat="@drawable/ic_info"
        app:drawableStartCompat="@drawable/ic_message_status_delivered_one"
        tools:text="@string/explanation_message_status_delivered_all"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>