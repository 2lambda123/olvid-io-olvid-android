<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/alwaysWhite" />
            <corners
                android:radius="24dp"/>
        </shape>
    </item>
    <item android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/olvid_gradient_light"
                android:endColor="@color/olvid_gradient_dark"
                android:angle="270" />
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <item android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:drawable="@drawable/icon_olvid_no_padding"/>
</layer-list>